<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买入"
                android:textColor="#16B887"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_buy_coin_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC/USDT"
                android:textColor="#222F4D"
                android:textSize="14sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_time"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-09-01 08:30:30"
            android:textColor="#222F4D"
            android:alpha="0.4"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_cancel"
            android:text="撤销"
            android:textColor="#356DF0"
            android:textSize="14sp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_price_name"
                android:text="价格(USDT)"
                android:textSize="12sp"
                android:textColor="#222F4D"
                android:alpha="0.25"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_price"
                android:text="10338.99"
                android:textSize="12sp"
                android:textColor="#222F4D"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_amount_name"
                android:text="数量(BTC)"
                android:textSize="12sp"
                android:textColor="#222F4D"
                android:alpha="0.25"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_amount"
                android:text="0.18910009"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                android:textColor="#222F4D"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_buy_name"
                android:text="实际成交(BTC)"
                android:textSize="12sp"
                android:textColor="#222F4D"
                android:alpha="0.25"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_buy_amount"
                android:text="0.00"
                android:textSize="12sp"
                android:textColor="#222F4D"
                android:layout_marginTop="6dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>