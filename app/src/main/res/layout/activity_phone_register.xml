<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:src="@drawable/icon_close" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="36dp"
            android:src="@drawable/icon_logo" />
        <TextView
            android:id="@+id/tv_register"
            android:text="注册"
            android:textColor="#356DF0"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:text="手机注册"
        android:textSize="22sp"
        android:textColor="#222F4D"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="56dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:id="@+id/tv_area_code"
            android:text="+86"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textColor="#222F4D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_down"
            android:src="@drawable/icon_triangle_down"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:background="#DFDFE0"
            android:layout_width="1dp"
            android:layout_gravity="center"
            android:layout_marginLeft="19dp"
            android:layout_height="22dp"/>
        <EditText
            android:id="@+id/et_phone"
            android:background="@null"
            android:text=""
            android:textSize="18sp"
            android:textColor="#222F4D"
            android:hint="手机号码"
            android:paddingLeft="8dp"
            android:inputType="phone"
            android:textColorHint="#C8CBD2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_cancel"
            android:padding="5dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_small_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/view_phone"
        android:background="@drawable/selector_line_bg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_emile_register"
            android:text="邮箱注册"
            android:textColor="#356DF0"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_jump"
            android:layout_alignParentRight="true"
            android:layout_marginTop="32dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/selector_jump"
            android:layout_width="76dp"
            android:layout_height="76dp"/>
    </RelativeLayout>
</LinearLayout>