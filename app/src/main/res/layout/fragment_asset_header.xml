<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_coin_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_coin_count_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_eyes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="13dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/selector_show_hide" />

            <TextView
                android:id="@+id/tv_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:text="币币账户"
                android:textColor="#F0F4FF"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_btc_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="10.24890089 BTC"
            android:textColor="#F0F4FF"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_cyn_amount"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:alpha="0.4"
            android:text="≈887909.84 CNY"
            android:textColor="#F0F4FF"
            android:textSize="22sp" />



        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="16dp"
            android:alpha="0.06"
            android:background="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp">

            <TextView
                android:id="@+id/tv_coin_charging"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="充币"
                android:textColor="#F0F4FF"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:alpha="0.2"
                android:background="@color/white" />
            <TextView
                android:id="@+id/tv_withdraw_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="提币"
                android:textColor="#F0F4FF"
                android:textSize="14sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:alpha="0.2"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_transfer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="划转"
                android:textColor="#F0F4FF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>