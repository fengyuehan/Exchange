<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:src="@drawable/icon_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="交易设置"
            android:textColor="#222F4D"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:background="#EDEEF0"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <TextView
        android:text="设置密码"
        android:textSize="22sp"
        android:textColor="#222F4D"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="资金密码"
        android:textColor="#222F4D"
        android:textSize="14sp"
        android:alpha="0.4"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <EditText
            android:id="@+id/et_password"
            android:text=""
            android:textSize="18sp"
            android:textColor="#222F4D"
            android:hint="8-32位，且首字母必须为字母"
            android:textColorHint="#B2B6C1"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@null"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_eye"
            android:layout_gravity="center"
            android:layout_marginRight="23dp"
            android:src="@drawable/selector_eyes_close_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#DFDFE0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_tips"
        android:text="*8-32位字母与数字结合"
        android:textColor="#F0486F"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="确认密码"
        android:textColor="#222F4D"
        android:textSize="14sp"
        android:alpha="0.4"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <EditText
            android:id="@+id/et_new_password"
            android:text=""
            android:textSize="18sp"
            android:textColor="#222F4D"
            android:hint="请再次输入资金密码"
            android:textColorHint="#B2B6C1"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@null"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_eye_new"
            android:layout_gravity="center"
            android:layout_marginRight="23dp"
            android:src="@drawable/selector_eyes_close_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#DFDFE0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_new_password_tips"
        android:text="*两次密码不一致"
        android:textColor="#F0486F"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_jump"
        android:layout_gravity="right"
        android:layout_marginTop="32dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/selector_jump"
        android:layout_width="76dp"
        android:layout_height="76dp"/>
</LinearLayout>