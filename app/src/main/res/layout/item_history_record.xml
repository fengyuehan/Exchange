<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="166dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买入"
                android:textColor="#16B887"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_buy_coin_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC/USDT"
                android:textColor="#222F4D"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_jump"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_status"
                android:text="已完成"
                android:textColor="@color/color_b2"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:src="@drawable/icon_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="#EDEEF0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="时间"
            android:textSize="12sp"
            android:textColor="#222F4D"
            android:alpha="0.25"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_time"
            android:text="09-01 08:30"
            android:textSize="12sp"
            android:textColor="#222F4D"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="委托价(USDT)"
                android:textSize="12sp"
                android:textColor="#222F4D"
                android:alpha="0.25"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_price"
                android:text="10338.99"
                android:textSize="12sp"
                android:textColor="#222F4D"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="委托量(BTC)"
                android:textSize="12sp"
                android:textColor="#222F4D"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:alpha="0.25"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_amount"
                android:text="1.0089"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:textSize="12sp"
                android:textColor="#222F4D"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="成交总量"
                android:textSize="12sp"
                android:textColor="#222F4D"
                android:alpha="0.25"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_all_amount"
                android:text="1.0089"
                android:textSize="12sp"
                android:textColor="#222F4D"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="成交均价(USDT)"
                android:textSize="12sp"
                android:textColor="#222F4D"
                android:alpha="0.25"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_average_price"
                android:text="10338.99"
                android:textSize="12sp"
                android:textColor="#222F4D"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="成交量(BTC)"
                android:textSize="12sp"
                android:textColor="#222F4D"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:alpha="0.25"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_buy_amount"
                android:text="1.0089"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:textSize="12sp"
                android:textColor="#222F4D"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="14dp"
        android:background="#EDEEF0"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
</LinearLayout>