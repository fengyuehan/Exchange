<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/iv_go_back"
            android:padding="5dp"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="KYC1认证"
            android:textSize="18sp"
            android:textColor="#222F4D"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:background="#EDEEF0"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <TextView
        android:text="您已绑定手机"
        android:textSize="16sp"
        android:textColor="#222F4D"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_phone"
        android:text="138****0088"
        android:textSize="16sp"
        android:textColor="#222F4D"
        android:alpha="0.4"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="需要绑定邮箱来完成KYC1认证"
            android:textSize="14sp"
            android:textColor="#F0486F"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginTop="24dp"
        android:background="#EDEEF0"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <TextView
        android:text="绑定邮箱"
        android:textSize="16sp"
        android:textColor="#222F4D"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <EditText
            android:id="@+id/et_emile"
            android:text=""
            android:textColor="#222F4D"
            android:textSize="18sp"
            android:hint="请输入邮箱"
            android:textColorHint="#C8CBD2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"/>
    </LinearLayout>

    <View
        android:id="@+id/view_emile"
        android:background="@drawable/selector_view_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ImageView
        android:id="@+id/iv_jump"
        android:layout_gravity="right"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/selector_jump"
        android:layout_width="76dp"
        android:layout_height="76dp"/>
</LinearLayout>